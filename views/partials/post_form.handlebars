<form onsubmit="submit_post()">
    <div class="form-group">
        <label for="post_title">Post Title</label>
        <input type="text" class="form-control" id="post_title" placeholder="Enter post title">
    </div>

    <div class="form-group">
        <label for="post_message">Post Message</label>
        <textarea class="form-control" id="post_message" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
</form>

<script src="/js/submit_post.js"></script>